{
    "compilerOptions": {
        "outDir": "./_build",
        "baseUrl": "src",
        "types": ["node"],
        "typeRoots": ["../node_modules/@types", "../types"],
        "declaration": true,
        "declarationDir": "./types",
        "allowJs": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDeclarationOnly": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
