{
    "compilerOptions": {
        "outDir": "_build",
        "baseUrl": "src",
        "typeRoots": ["node_modules/@types", "types"],
        "allowJs": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDeclarationOnly": false,
        "declaration": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true
    },
    "include": ["src/**/*.ts"]
}
